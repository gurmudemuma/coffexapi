# ====================================
# Application Environment Configuration
# ====================================
# Copy this file to .env and update the values
# DO NOT commit the actual .env file to version control

# ====================================
# IPFS Configuration (Infura)
# ====================================
# Required for IPFS file storage and retrieval
# Get these values from your Infura IPFS project
VITE_INFURA_PROJECT_ID=bcd2aa1b19f4406fa9b017a350070e40
VITE_INFURA_PROJECT_SECRET=your_infura_project_secret_here

# ====================================
# API Configuration
# ====================================
# Base URL for the backend API
VITE_API_BASE_URL=http://localhost:8000/api

# ====================================
# Application Settings
# ====================================
# Set to 'production' in production environments
VITE_APP_ENV=development

# ====================================
# Feature Flags
# ====================================
# Enable/disable specific features
VITE_FEATURE_IPFS_UPLOAD=true
VITE_FEATURE_OFFLINE_MODE=false

# ====================================
# Security Settings
# ====================================
# Session timeout in minutes
VITE_SESSION_TIMEOUT=30

# ====================================
# Analytics & Monitoring
# ====================================
# Enable/disable analytics
VITE_ENABLE_ANALYTICS=false
VITE_ANALYTICS_ID=your_analytics_id_here

# ====================================
# Development Settings
# ====================================
# Enable debug logging in development
VITE_DEBUG_LOGGING=true

