# Production Environment Configuration
# Coffee Export Platform - Production Settings

# Environment metadata
ENVIRONMENT=production
DEPLOY_MODE=full
NODE_ENV=production

# Service endpoints
API_GATEWAY_HOST=api.coffee-export.com
API_GATEWAY_PORT=443
FRONTEND_HOST=app.coffee-export.com
FRONTEND_PORT=443

# Database configuration
DATABASE_URL=${DATABASE_URL}
REDIS_URL=${REDIS_URL}
COUCHDB_URL=${COUCHDB_URL}

# Blockchain network
BLOCKCHAIN_NETWORK=production
FABRIC_CA_SERVER_URL=${FABRIC_CA_SERVER_URL}
ORDERER_URL=${ORDERER_URL}

# IPFS configuration
IPFS_API_URL=${IPFS_API_URL}
IPFS_GATEWAY_URL=${IPFS_GATEWAY_URL}

# Validator services
NATIONAL_BANK_VALIDATOR_URL=${NATIONAL_BANK_VALIDATOR_URL}
BANK_API_VALIDATOR_URL=${BANK_API_VALIDATOR_URL}
QUALITY_VALIDATOR_URL=${QUALITY_VALIDATOR_URL}
CUSTOMS_VALIDATOR_URL=${CUSTOMS_VALIDATOR_URL}

# Authentication and security
JWT_SECRET=${JWT_SECRET}
SESSION_SECRET=${SESSION_SECRET}
CORS_ORIGIN=https://app.coffee-export.com

# SSL/TLS configuration
SSL_ENABLED=true
SSL_CERT_PATH=/certs/production.crt
SSL_KEY_PATH=/certs/production.key
TLS_MIN_VERSION=1.2

# Logging configuration
LOG_LEVEL=WARN
LOG_FORMAT=json
LOG_DIRECTORY=/var/log/coffee-export
LOG_MAX_SIZE=100m
LOG_MAX_FILES=30

# Production-specific settings
HOT_RELOAD=false
DEBUG_MODE=false
ENABLE_DEV_TOOLS=false
MOCK_VALIDATORS=false

# Testing configuration (production test hashes)
TEST_LICENSE_HASH=${PROD_LICENSE_HASH}
TEST_INVOICE_HASH=${PROD_INVOICE_HASH}
TEST_QUALITY_HASH=${PROD_QUALITY_HASH}
TEST_SHIPPING_HASH=${PROD_SHIPPING_HASH}

# Performance settings
REQUEST_TIMEOUT=10000
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=60000

# Monitoring and health checks
HEALTH_CHECK_INTERVAL=15000
METRICS_ENABLED=true
MONITORING_PORT=9090
MONITORING_ENDPOINT=${MONITORING_ENDPOINT}

# External services
NOTIFICATION_SERVICE_URL=${NOTIFICATION_SERVICE_URL}
EMAIL_SERVICE_URL=${EMAIL_SERVICE_URL}
SMS_SERVICE_URL=${SMS_SERVICE_URL}

# Backup and disaster recovery
BACKUP_ENABLED=true
BACKUP_INTERVAL=hourly
BACKUP_RETENTION_DAYS=90
BACKUP_S3_BUCKET=${BACKUP_S3_BUCKET}
DISASTER_RECOVERY_ENABLED=true

# Load balancing and scaling
LOAD_BALANCER_ENABLED=true
MAX_CONCURRENT_CONNECTIONS=1000
CONNECTION_TIMEOUT=5000
AUTO_SCALING_ENABLED=true
MIN_REPLICAS=2
MAX_REPLICAS=10

# Kubernetes configuration
KUBERNETES_NAMESPACE=coffee-export
KUBERNETES_SERVICE_ACCOUNT=coffee-export-sa
KUBERNETES_INGRESS_CLASS=nginx

# CDN configuration
CDN_ENABLED=true
CDN_ENDPOINT=${CDN_ENDPOINT}
STATIC_ASSETS_CDN=${STATIC_ASSETS_CDN}

# Feature flags
FEATURE_BLOCKCHAIN_VALIDATION=true
FEATURE_DOCUMENT_UPLOAD=true
FEATURE_REAL_TIME_MONITORING=true
FEATURE_AUDIT_TRAIL=true
FEATURE_ADVANCED_ANALYTICS=true
FEATURE_COMPLIANCE_REPORTING=true

# Security settings
SECURITY_HEADERS_ENABLED=true
CSRF_PROTECTION_ENABLED=true
XSS_PROTECTION_ENABLED=true
CONTENT_SECURITY_POLICY_ENABLED=true
HSTS_ENABLED=true
SECURITY_SCANNING_ENABLED=true

# Compliance and auditing
AUDIT_LOGGING_ENABLED=true
COMPLIANCE_MODE_ENABLED=true
DATA_RETENTION_POLICY_ENABLED=true
GDPR_COMPLIANCE_ENABLED=true

# Resource limits
MEMORY_LIMIT=2Gi
CPU_LIMIT=1000m
DISK_LIMIT=10Gi

# Alert thresholds
CPU_ALERT_THRESHOLD=80
MEMORY_ALERT_THRESHOLD=85
DISK_ALERT_THRESHOLD=90
ERROR_RATE_ALERT_THRESHOLD=5
RESPONSE_TIME_ALERT_THRESHOLD=5000